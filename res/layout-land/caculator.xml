<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 结果显示控件 -->    <EditText
        android:id="@+id/result"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:ellipsize="start"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="right|center"
        android:hint=""
        android:singleLine="true"
        android:textSize="30dp" />
    
    <!-- 七(7)、八(8)、九(9)、空白、乘号(×)、清除(c) -->
    <TableRow android:layout_weight="1">
        <Button
            android:id="@+id/seven"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickSevenButton"
            android:text="@string/seven"
            android:textSize="40dp" />
        <Button
            android:id="@+id/eight"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickEightButton"
            android:text="@string/eight"
            android:textSize="40dp" />
        <Button
            android:id="@+id/nine"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickNineButton"
            android:text="@string/nine"
            android:textSize="40dp" />
        <Button
            android:id="@+id/blank3"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false" />
        <Button
            android:id="@+id/multiply"
            android:layout_height="match_parent"
            android:clickable="false"
            android:layout_weight="1"
            android:textSize="40dp"
            android:text="@string/multiply" />
        <Button
            android:id="@+id/clear"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickClearButton"
            android:text="@string/clear"
            android:textSize="40dp" />
    </TableRow>

    <!-- 四(4)、五(5)、六(6)、冒号(:)、除号(÷)、减号(-) -->
    <TableRow android:layout_weight="1">
        <Button
            android:id="@+id/four"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickFourButton"
            android:text="@string/four"
            android:textSize="40dp" />
        <Button
            android:id="@+id/five"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickFiveButton"
            android:text="@string/five"
            android:textSize="40dp" />
        <Button
            android:id="@+id/six"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickSixButton"
            android:text="@string/six"
            android:textSize="40dp" />
        <Button
            android:id="@+id/colon"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickColonButton"
            android:text="@string/colon"
            android:textSize="40dp" />
        <Button
            android:id="@+id/divide"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:text="@string/divide"
            android:textSize="40dp" />
        <Button
            android:id="@+id/subtract"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:text="@string/subtract"
            android:textSize="40dp" />
    </TableRow>
    
    <!-- 壹(1)、二(2)、三(3)、零(0)、等号(=)、加号(+) -->
    <TableRow android:layout_weight="1">
        <Button
            android:id="@+id/one"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickOneButton"
            android:text="@string/one"
            android:textSize="40dp" />
        <Button
            android:id="@+id/two"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTwoButton"
            android:text="@string/two"
            android:textSize="40dp" />
        <Button
            android:id="@+id/three"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickThreeButton"
            android:text="@string/three"
            android:textSize="40dp" />
        <Button
            android:id="@+id/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickZeroButton"
            android:textSize="40dp"
            android:text="@string/zero" />
        <Button
            android:id="@+id/calculator"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickCalculateButton"
            android:textSize="40dp"
            android:text="@string/calculator" />
        <Button
            android:id="@+id/add"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickAddButton"
            android:textSize="40dp"
            android:text="@string/add" />
    </TableRow>
    
</TableLayout>